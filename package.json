{
  "name": "flow-automate",
  "displayName": "Flow automate",
  "description": "VS Code extension –¥–ª—è —Å—Ç–≤–æ—Ä–µ–Ω–Ω—è MR —ñ –ø–æ—Å—Ç—É –≤ Jira",
  "version": "0.0.6",
  "publisher": "hrt-plk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/heartpolik/vsc-app-flow_automate.git"
  },
  "bugs": {
    "url": "https://github.com/heartpolik/vsc-app-flow_automate/issues"
  },
  "homepage": "https://github.com/heartpolik/vsc-app-flow_automate/blob/master/README.md",
  "engines": {
    "vscode": "^1.70.0"
  },
  "icon": "media/icon.png",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:flowAutomate.start",
    "workspaceContains:.git"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "pretest": "npm run compile",
    "compile": "tsc",
    "clean": "rm -rf dist",
    "watch": "tsc -w",
    "bundle": "node esbuild.js",
    "bundle:prod": "node esbuild.js --production",
    "bundle:watch": "node esbuild.js --watch",
    "vscode:prepublish": "npm run compile && npm run bundle:prod"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.70.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.5",
    "mocha": "^11.6.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@gitbeaker/rest": "^42.5.0",
    "axios": "^1.6.0",
    "simple-git": "^3.20.0"
  },
  "contributes": {
    "menus": {
      "view/item/context": [
        {
          "command": "flowAutomate.refreshRepo",
          "when": "view == reposList && viewItem == gitRepo",
          "group": "context"
        },
        {
          "command": "flowAutomate.openInTerminal",
          "when": "view == reposList && viewItem == gitRepo",
          "group": "context"
        },
        {
          "command": "flowAutomate.mr2prod",
          "when": "view == reposList && viewItem == gitRepo",
          "group": "inline"
        },
        {
          "command": "flowAutomate.mr2stage",
          "when": "view == reposList && viewItem == gitRepo",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flowAutomate",
          "title": "Flow helper",
          "icon": "media/git.svg"
        }
      ]
    },
    "views": {
      "flowAutomate": [
        {
          "id": "reposList",
          "name": "Git Repositories",
          "icon": "media/git.svg"
        },
        {
          "id": "actionsList",
          "name": "Actions",
          "icon": "media/git.svg"
        }
      ]
    },
    "configuration": {
      "title": "Flow automate",
      "properties": {
        "flowAutomate.gitlabUrl": {
          "type": "string",
          "default": "https://gitlab.com/api/v4",
          "description": "URL GitLab API"
        },
        "flowAutomate.gitlabToken": {
          "type": "string",
          "default": "",
          "description": "GitLab Private Token",
          "secret": true
        },
        "flowAutomate.gitlabAutoPush": {
          "type": "boolean",
          "default": false,
          "description": "–ê–≤—Ç–æ–º–∞—Ç–∏—á–Ω–æ –∑–∞–ø—É—à–∏—Ç–∏ –≥—ñ–ª–∫—É –ø–µ—Ä–µ–¥ –º–µ—Ä–¥–∂-—Ä–µ–∫–≤–µ—Å—Ç–æ–º, —è–∫—â–æ –≤–æ–Ω–∞ –≤—ñ–¥—Å—É—Ç–Ω—è"
        },
        "flowAutomate.branchProd": {
          "type": "string",
          "default": "prod",
          "description": "Production branch name"
        },
        "flowAutomate.branchStage": {
          "type": "string",
          "default": "stage",
          "description": "Stage (pre prod) branch name"
        },
        "flowAutomate.jiraUrl": {
          "type": "string",
          "default": "",
          "description": "URL Jira"
        },
        "flowAutomate.jiraEmail": {
          "type": "string",
          "default": "",
          "description": "Email –∫–æ—Ä–∏—Å—Ç—É–≤–∞—á–∞ Jira"
        },
        "flowAutomate.jiraToken": {
          "type": "string",
          "default": "",
          "description": "API Token Jira (https://id.atlassian.com/manage-profile/security/api-tokens)",
          "secret": true
        },
        "flowAutomate.jiraSectionName": {
          "type": "string",
          "default": "description",
          "description": "–ù–∞–∑–≤–∞ –ø–æ–ª—è –≤ –∫–∞—Ä—Ç—Ü—ñ, –∫—É–¥–∏ –±—É–¥—É—Ç—å –¥–æ–¥–∞–≤–∞—Ç–∏—Å—å –∫–æ–º—ñ—Ç–∏"
        }
      }
    },
    "commands": [
      {
        "command": "flowAutomate.refreshRepo",
        "title": "üîÑ –û–Ω–æ–≤–∏—Ç–∏ —Å—Ç–∞—Ç—É—Å"
      },
      {
