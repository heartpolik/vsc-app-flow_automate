{
	"compilerOptions": {
		"types": [
			"mocha",
			"node"
		],
		"outDir": "dist", // куди зберігати скомпільовані файли
		"rootDir": "src", // де знаходиться початковий код
		"module": "commonjs",
		"target": "es2020",
		"lib": [
			"ES2020"
		],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"sourceMap": true // дозволяє дебажити TypeScript у VS Code
	},
	"include": [
		"src"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}